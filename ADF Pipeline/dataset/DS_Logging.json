{
	"name": "DS_Logging",
	"properties": {
		"linkedServiceName": {
			"referenceName": "LS_ADLS_Parametrized",
			"type": "LinkedServiceReference",
			"parameters": {
				"account_name": "@pipeline().parameters.account_name",
				"container_name": "@pipeline().parameters.log_container"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat('pipeline-log-', formatDateTime(utcNow(),'yyyy-MM-ddTHH-mm-ss'), '.csv')",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@pipeline().parameters.log_path",
					"type": "Expression"
				},
				"fileSystem": {
					"value": "@pipeline().parameters.log_container",
					"type": "Expression"
				}
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": []
	}
}